<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_dark"
    tools:context="com.example.android.signlanguageinterpreter.MainActivity">

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

<LinearLayout
    android:layout_gravity="right"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/btClick"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:textColor="@android:color/background_light"
        android:layout_alignParentRight="true"
        android:text="Bluetooth Status:"
        android:gravity="center_vertical"
        android:layout_toLeftOf="@id/btStatusImg"
        />

    <TextView
        android:id="@+id/btStatusImg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/background_light"
        android:layout_alignParentRight="true"
        android:padding="10dp"
        android:text="Disconnected"
        android:textStyle="bold" />

</LinearLayout>

        <TextView

        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="128dp"
        android:layout_margin="5dp"
        android:background="@android:color/background_light"
        android:text="Message will be displayed here!"
        android:textSize="20sp"
        />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="right">
        <TextView
            android:id="@+id/importance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textColor="@android:color/background_light"
            android:text="Importance :"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/holo_red_dark"
            android:text="Urgent"
            android:paddingRight="10dp"

            android:textStyle="bold"
            />

        </LinearLayout>


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/background_light"
            android:layout_margin="10dp"
            android:text="Custom Map"
            />
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_radio_button_unchecked"
            android:layout_gravity="center"
            android:background="@color/colorAccent"
            />
    </LinearLayout>
</RelativeLayout>
